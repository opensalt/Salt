#!/bin/bash

BROWSER=
if [[ "$@" == *"firefox"* ]]; then
  BROWSER="${BROWSER} firefox"
fi

if [[ "$@" == *"chrome"* ]]; then
  BROWSER="${BROWSER} chrome"
fi

if [[ "$@" == *"phantomjs"* ]]; then
  BROWSER="${BROWSER} phantomjs"
fi

if [ "${BROWSER}x" == "x" ]; then
  BROWSER=firefox
fi

cd $(dirname $0)/..

docker-compose -f docker/docker-compose.yml -f docker/docker-compose.browsers.yml up -d $BROWSER

if [[ "${BROWSER}" == *"chrome"* ]]; then
  docker-compose -f docker/docker-compose.yml -f docker/docker-compose.browsers.yml run --rm wait dockerize -wait tcp://chrome:4444 -timeout 30s
fi

if [[ "${BROWSER}" == *"firefox"* ]]; then
  docker-compose -f docker/docker-compose.yml -f docker/docker-compose.browsers.yml run --rm wait dockerize -wait tcp://firefox:4444 -timeout 30s
fi

if [[ "${BROWSER}" == *"phantomjs"* ]]; then
  docker-compose -f docker/docker-compose.yml -f docker/docker-compose.browsers.yml run --rm wait dockerize -wait tcp://phantomjs:8643 -timeout 30s
fi

./bin/phpcli ./bin/codecept-wrapper "$@"
RET=$?

docker-compose -f docker/docker-compose.yml -f docker/docker-compose.browsers.yml stop $BROWSER
docker-compose -f docker/docker-compose.yml -f docker/docker-compose.browsers.yml rm -f -v $BROWSER

exit $RET
