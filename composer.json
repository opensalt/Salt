{
    "name": "opensalt/opensalt",
    "license": "MIT",
    "type": "project",
    "description": "A competency framework managment system that works with the CASE format",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Codeception\\Module\\": "tests/_support/Module"
        },
        "classmap": [
            "tests/_behat/Context.php"
        ]
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/PCGGenEd/faker-context"
        },
        {
            "type": "package",
            "package": {
                "name": "firebase",
                "version": "4.8.2",
                "dist": {
                    "url": "https://www.gstatic.com/firebasejs/4.8.2/firebase.js",
                    "type": "file"
                }
            }
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.1.3",
        "ext-iconv": "*",
        "csa/guzzle-bundle": "^3.0",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-cache-bundle": "^1.2",
        "doctrine/doctrine-fixtures-bundle": "^3.0",
        "doctrine/doctrine-migrations-bundle": "^1.1",
        "doctrine/orm": "^2.5",
        "google/recaptcha": "~1.1",
        "jms/serializer-bundle": "^2.3.1",
        "kreait/firebase-php": "~4.7",
        "league/flysystem-aws-s3-v3": "^1.0",
        "league/oauth2-github": "^2.0.0",
        "matthimatiker/opcache-bundle": "^0.7",
        "milo/github-api": "^1.4",
        "namshi/cuzzle": "^2.0",
        "nelmio/cors-bundle": "~1.5.4",
        "nelmio/security-bundle": "^2.5",
        "phpoffice/phpspreadsheet": "^1.1.0",
        "phpoffice/phpword": "^0.14.0",
        "qandidate/toggle-bundle": "^1.1.0",
        "ramsey/uuid": "^3.7",
        "ramsey/uuid-doctrine": "^1.4",
        "sensio/framework-extra-bundle": "^5.0.0",
        "simplethings/entity-audit-bundle": "^1.0",
        "stof/doctrine-extensions-bundle": "^1.3",
        "symfony/asset": "^4.0",
        "symfony/console": "^4.0",
        "symfony/flex": "^1.0",
        "symfony/form": "^4.0",
        "symfony/framework-bundle": "^4.0",
        "symfony/lts": "^4@dev",
        "symfony/monolog-bundle": "^3.1",
        "symfony/polyfill-apcu": "^1.0",
        "symfony/polyfill-iconv": "^1.0",
        "symfony/profiler-pack": "^1.0",
        "symfony/security-bundle": "^4.0",
        "symfony/security-csrf": "^4.0",
        "symfony/swiftmailer-bundle": "^3.2",
        "symfony/translation": "^4.0",
        "symfony/twig-bundle": "^4.0",
        "symfony/validator": "^4.0",
        "symfony/yaml": "^4.0",
        "tecnickcom/tcpdf": "6.*",
        "tetranz/select2entity-bundle": "2.*",
        "twig/extensions": "^1.5",
        "twig/twig": "^2.0"
    },
    "require-dev": {
        "roave/security-advisories" :"dev-master",
        "symfony/maker-bundle": "^1.5",
        "symfony/phpunit-bridge": "^4.0",

        "codeception/codeception": "^2.3",
            "codeception/specify": "~0.4",
            "codeception/verify": "~0.3",
            "flow/jsonpath": "~0.3",
            "league/factory-muffin": "~3.0",
            "league/factory-muffin-faker": "~2.0",
            "phpunit/phpunit": "~5.7",

        "squizlabs/php_codesniffer": "^3.2",
        "escapestudios/symfony2-coding-standard": "^3.1",
        "friendsofphp/php-cs-fixer": "^2.10",
        "ericmartel/codeception-email-mailtrap": "^1.0",
        "theofidry/psysh-bundle": "^3.4"
    },
    "replace": {
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true
        }
    }
}
