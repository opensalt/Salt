{% extends base_template %}

{% block body %}
    <h1>User edit</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <ul class="list-inline float-end">
            <li class="list-inline-item ms-2">
                <input class="btn btn-default" type="submit" value="Save" />
            </li>
        </ul>
    {{ form_end(edit_form) }}

    <ul class="list-inline float-end">
        <li class="list-inline-item">
            <a class="btn btn-primary" href="{{ path('admin_user_index') }}">Back to the list</a>
        </li>
        {% if isFeatureEnabled('mfa') and user.isTotpAuthenticationEnabled() %}
        <li class="list-inline-item">
            {{ form_start(mfa_reset_form) }}
            <input class="btn btn-danger" type="submit" value="Reset Two Factor Settings">
            {{ form_end(mfa_reset_form) }}
        </li>
        {% endif %}
        <li class="list-inline-item">
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
