{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Edit Template {{ template.filename }}</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <input class="btn btn-primary" type="submit" value="Update" />
    {{ form_end(form) }}

    <br/>
    <ul class="list-inline">
        <li class="list-inline-item">
            <a class="btn btn-default" href="{{ path('front_matter_list') }}">Back to the list</a>
        </li>
        {% if is_granted(constant('App\\Security\\Permission::FRONT_MATTER_DELETE'), template) %}
            <li class="list-inline-item">
                {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        {% endif %}
    </ul>

{% endblock %}

{% block javascripts %}

{% endblock %}

