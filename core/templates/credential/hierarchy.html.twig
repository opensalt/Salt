{% extends 'layout.html.twig' %}

{% block title %}
    Change collection
{% endblock %}

{% block body %}
    <h1>Change the collection for {{ credential.lastVersion.content.name }}</h1>

    {{ form_start(form, {'attr': {'id': 'credential_definition_form'}}) }}
        {{ form_widget(form) }}
        <p class="pull-right">
            <input class="btn btn-primary" type="submit" value="Save Changes" />
        </p>
    {{ form_end(form) }}

    <div class="clearfix"></div>
    <div class="pull-right">
        <ul class="list-inline text-right">
            <li>
                <a class="btn btn-default" href="{{ path('credential_index') }}">Back to the list</a>
            </li>
        </ul>
    </div>
{% endblock %}

