{% extends 'base.html.twig' %}

{% block body %}
    <h1>User list</h1>
    
{{ form_start(form) }}
      {{ form_label(form.organization) }}<div class="col-md-2"> {{ form_widget(form.organization) }}</div>
      {{ form_label(form.user_role) }}<div class="col-md-2"> {{ form_widget(form.user_role) }}</div>
      <div class="col-md-3"><input class="btn btn-primary" type="submit" value="Search" /></div>       
{{ form_end(form) }}
    
      <br/><br/><br/>
    <table class="table table-condensed table-hover table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Organization</th>
                <th>Username</th>
                <th>Roles</th>
                <th class="col-md-3">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('admin_user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.org.name }}</td>
                <td>{{ user.username }}</td>
                <td>
                    
                    {%- for role in user.roles -%}
                        {% if not loop.first %}, {% endif %}{{ role |replace({'ROLE_':'', '_':' '}) |title }}
                    {%- endfor -%}
                </td>
                <td class="text-center">
                    <ul class="list-inline">
                        <li>
                            <a class="btn btn-primary" href="{{ path('admin_user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        {% if not user.suspended %}
                            <li>
                                <a class="btn btn-default" href="{{ path('admin_user_edit', { 'id': user.id }) }}">edit</a>
                            </li>
                        {% endif %}
                        <li>
                            {% if user.suspended %}
                                <a class="btn btn-default" href="{{ path('admin_user_unsuspend', { 'id': user.id }) }}">Unsuspend</a>
                            {% else %}
                                <a class="btn btn-default" href="{{ path('admin_user_suspend', { 'id': user.id }) }}">Suspend</a>
                            {% endif %}
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-inline pull-right">
        <li>
            <a class="btn btn-default" href="{{ path('admin_user_new') }}">Add a new user</a>
        </li>
    </ul>
{% endblock %}
