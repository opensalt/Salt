{% extends 'layout.html.twig' %}

{% block body %}
    {% if not app.request.xmlHttpRequest %}
        <h1>LsItem creation</h1>
    {% endif %}

       {{ form_start(form, {'enctype': 'multipart/form-data'}) }}
        <input type="hidden" name="fullstatementAttachment" id="ls_item_fullstatementAttachment" value="">
         <input type="hidden" name="notesAttachment" id="ls_item_notesAttachment" value="">
        {{ form_widget(form) }}
        {% if not app.request.xmlHttpRequest %}
            <input class="btn btn-primary" type="submit" value="Create" />
        {% endif %}
    {{ form_end(form) }}

    {% if not app.request.xmlHttpRequest %}
        <br/>
        <ul class="list-inline">
            <li>
                <a class="btn btn-default" href="{{ path('lsitem_index') }}">Back to the list</a>
            </li>
        </ul>
    {% endif %}
{% endblock %}
