<div id="wizard" class="modal bs-example-modal-lg fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Import Framework</h4>
            </div>
            <div class="modal-body fields-body-framework">
                <div class="row">
                    <div class="col-md-12">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#asn" data-toggle="tab">Import from ASN</a></li>
                            <li><a href="#case" data-toggle="tab">Import CASE file</a></li>
                            <li><a href="#excel" data-toggle="tab">Import Spreadsheet file</a></li>
                        </ul>
                        <br>
                        <div class="tab-content">
                            <div class="tab-pane fade in active" id="asn">
                                <input id="asn-url" placeholder="ASN url" type="text" class="form-control">
                                <br/>
                                <div class="alert alert-danger asn-error-msg hidden" role="alert"></div>
                                <button type="button" class="btn btn-primary btn-import-framework btn-import-asn">Import Framework</button>
                            </div>
                            <div class="tab-pane fade" id="case">
                                <input id="file-url" type="file" class="form-control">
                                <br/>
                                <div class="alert alert-danger case-error-msg hidden" role="alert"></div>
                                <a type="button" class="btn btn-primary btn-import btn-import-case" onclick="SaltLocal.handleFile('case', 'file-url');">Import Framework</a>
                            </div>
                            <div class="tab-pane fade" id="excel">
                                <div class="col-5">
                                    <p>
                                        Spreadsheet Template/Import <a id="template" href="https://docs.google.com/spreadsheets/d/1PE8zS_MgFsmwARNHlbdZltZhAQEI72ZraTlV10grjLg/edit#gid=106010621" target="_blank">see this guide</a> Framework with sample Data
                                        <a id="guideline" href="{{ path('download_sample_file') }}" >User guide</a>
                                    </p>
                                </div>
                                <br/>
                                <input id="excel-url" type="file" class="form-control" accept=".xls,.xlsx">
                                <br/>
                                <div class="alert alert-danger case-error-msg hidden" role="alert"></div>
                                <a type="button" class="btn btn-primary btn-import btn-import-excel" onclick="SaltLocal.handleExcelFile();">Import Framework</a>
                                <a type="reset" class="btn btn-danger" data-dismiss="modal" onClick="window.location.reload()">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="file-loading hidden">
                    <div class="row">
                        <div class="col-md-12"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
